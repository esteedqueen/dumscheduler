
	<div class="row login-container column-seperation">
		<div class="col-md-5 col-md-offset-1">
			<h2>Sign up to get notifications, it's free!</h2>
			<p>Use Facebook, GoogleID or any other email to sign in.<br></p>
				<br>
				<button class="btn btn-block btn-info col-md-8" type="button">
					<span class="pull-left"><i class="icon-facebook"></i></span>
					<span class="bold">Sign up with Facebook</span> </button>
					<button class="btn btn-block btn-danger col-md-8" type="button">
						<span class="pull-left"><i class="icon-googleplus"></i></span>
						<span class="bold">Sign up with Gmail</span>
					</button>
				</div>
				<div class="col-md-5 "> <br>
					<%= form_for(@user) do |f| %>
					<%= render 'shared/error_messages' %>
						<div class="row">
							<div class="form-group col-md-10">
								<%= f.label :name, class: "form-label" %>
								<div class="controls">
									<div class="input-with-icon  right">
										<%= f.text_field :name, class: "form-control" %>
									</div>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="form-group col-md-10">
								<%= f.label :email, class: "form-label" %>
								<span class="help"></span>
								<div class="controls">
									<div class="input-with-icon  right">
									<i class=""></i>
										<%= f.text_field :email, class: "form-control" %>
									</div>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="form-group col-md-10">
								<%= f.label :password, class: "form-label" %>
								<span class="help"></span>
								<div class="controls">
									<div class="input-with-icon  right">
									<i class=""></i>
										<%= f.password_field :password, class: "form-control" %>
									</div>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="form-group col-md-10">
								<%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
								<span class="help"></span>
								<div class="controls">
									<div class="input-with-icon  right">
									<i class=""></i>
										<%= f.password_field :password_confirmation, class: "form-control" %>
									</div>
								</div>
							</div>
						</div>
						
						
						<div class="row">
							<div class="control-group  col-md-10">
								<div class="checkbox checkbox check-success"> <a href="#">Trouble login in?</a>&nbsp;&nbsp;
									<input type="checkbox" id="checkbox1" value="1">
									<label for="checkbox1">Keep me reminded </label>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-10">
								<%= f.submit "Create my account", class: "btn btn-primary btn-cons pull-right" %>
							</div>
						</div>
						<% end %>
				</div>
			</div>
		